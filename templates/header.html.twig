
{% if mainPages is defined %}

<nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
	<div class="container d-flex align-items-end">
		<div class='mb-2'>
			<img src="/build/img/allogo2.svg" class="" alt="" id="logo">
		</div>
		<a class="navbar-brand js-scroll-trigger" href="{{path('main' )}}">Amicale Laique Beaubrun</a>
		<button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			Menu
			<i class="fas fa-bars"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav ml-auto">
				{% for page in mainPages %}
					{% if page.childs is empty %}
						<li class="nav-item ">
							<a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ path('pages', {slug: page.slug}) }}">{{page.title}}
								<span class="sr-only">(current)</span>
							</a>
						</li>
					{% else %}
						<li class="nav-item dropdown">
							<a class="nav-link py-3 px-0 px-lg-3 rounded dropdown-toggle" href="#" id="{{page.title}}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								{{page.title}}
							</a>
							<div class="dropdown-menu" aria-labelledby="{{page.title}}">
								{% for child in page.childs %}
									{# {% if child.published == true %} #}
									<a class="dropdown-item" href="{{ path('pages', {slug: child.slug}) }}">{{child.title}}</a>
									{# {% endif %} #}
								{% endfor %}
							</div>
						</li>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
</nav>

{% endif %}